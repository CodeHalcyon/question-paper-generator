<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Question Selection</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-zinc-900 text-white p-2">
    <a href="/" class="text-blue-500 font-bold p-3 block mt-7 text-left">Go back to Home Page</a>
    <h1 class="text-2xl text-center font-bold m-4">Select Questions for Paper</h1>
        <form id="questionForm" class="flex flex-col justify-center items-center" action="/generate-paper" method="POST">
        <div>
        <h1 class="text-2xl m-8 text-center">PART A</h1>
        <table class="border w-full m-auto">
            <thead>
                <tr>
                    <th class="border p-2 text-2xl">Select</th>
                    <th class="border p-2 text-2xl">Q No</th>
                    <th class="border p-2 text-2xl">Questions</th>
                    <th class="border p-2 text-2xl">Marks</th>
                    <th class="border p-2 text-2xl">Bloom's Level</th>
                    <th class="border p-2 text-2xl">CO</th>
                    <th class="border p-2 text-2xl">Unit No</th>
                </tr>
            </thead>
            <tbody>
                <% questions.forEach(function(question) { %>
                    <tr>
                        <td class="border p-2"><input type="checkbox" name="selectedQuestionsA" value="<%= question._id %>"></td>
                        <td class="border p-2"><%= question.Q_No %></td>
                        <td class="border p-2" class="w-1/2"><%= question.Questions %></td>
                        <td class="border p-2"><%= question.Marks %></td>
                        <td class="border p-2"><%= question.BL %></td>
                        <td class="border p-2"><%= question.CO %></td>
                        <td class="border p-2"><%= question['Unit No'] %></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
        </div>
        <div>
        <h1 class="text-2xl m-8 text-center">PART B</h1>
        <table class="border w-full m-auto">
            <thead>
                <tr>
                    <th class="border p-2 text-2xl">Select</th>
                    <th class="border p-2 text-2xl">Q No</th>
                    <th class="border p-2 text-2xl">Questions</th>
                    <th class="border p-2 text-2xl">Marks</th>
                    <th class="border p-2 text-2xl">Bloom's Level</th>
                    <th class="border p-2 text-2xl">CO</th>
                    <th class="border p-2 text-2xl">Unit No</th>
                </tr>
            </thead>
            <tbody>
                <% questions2.forEach(function(question) { %>
                    <tr>
                        <td class="border p-2"><input type="checkbox" name="selectedQuestionsB" value="<%= question._id %>"></td>
                        <td class="border p-2"><%= question.Q_No %></td>
                        <td class="border p-2" class="w-1/2"><%= question.Questions %></td>
                        <td class="border p-2"><%= question.Marks %></td>
                        <td class="border p-2"><%= question.BL %></td>
                        <td class="border p-2"><%= question.CO %></td>
                        <td class="border p-2"><%= question['Unit No'] %></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
        </div>
        <button type="submit" class="bg-yellow-700 p-3 mt-10 block font-bold text-2xl">Generate Paper</button>
    </form>
</body>
</html>